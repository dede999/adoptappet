<div class="mld-grid" xmlns="http://www.w3.org/1999/html">
  <div class="mdl-cell-row">
    <h2 class="mdl-cell--12" style="text-align: center"> Entre </h2>
    <hr>
  </div>
</div>


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.email_field :email, autofocus: true, class: 'mdl-textfield__input' %>
    <strong style="font-size: xx-large"> <%= f.label :email, class: 'mdl-textfield__label' %> </strong>
  </div>
    <br>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.password_field :password, autocomplete: "off", class: 'mdl-textfield__input' %>
    <strong style="font-size: xx-large"> <%= f.label :password, class: 'mdl-textfield__label' %> </strong>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: 'mdl-button mdl-js-button mdl-button--raised mdl-button--colored mdl-js-ripple-effect'%>
  </div>
<% end %>

<%= render "devise/shared/links" %>

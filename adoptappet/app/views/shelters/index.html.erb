<h1>Listing Shelters</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>E-mail</th>
  </tr>

  <% @shelter.each do |shelter| %>
    <tr>
      <td><%= shelter.name %></td>
      <td><%= shelter.address %></td>
      <td><%= shelter.email %></td>
      <td><%= link_to 'Show', shelter_path(shelter) %></td>
    </tr>
  <% end %>
</table>

<div class="mld-grid">
  <div class="mdl-cell-row">
    <h2 class="mdl-cell--12" style="text-align: center"> Editar Serviço </h2>
    <hr>
  </div>
</div>

<div class="no-meio">
  <%= form_for :service, url: user_service_path(current_user.id, @service.id), method: :patch do |f| %>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <%= f.text_field :name, pattern: '[A-Za-z0-9 ]+', class: 'mdl-textfield__input' %>
          <%= f.label :name, class: 'mdl-textfield__label' %>
          <span class="mdl-textfield__error">Use Letras e números</span>
        </div>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <%= f.text_field :address, class: 'mdl-textfield__input' %>
          <%= f.label :address, class: 'mdl-textfield__label' %>
        </div>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <%= f.text_field :phone, class: 'mdl-textfield__input' %>
          <%= f.label :phone, class: 'mdl-textfield__label' %>
        </div>

        <p>
          <%= f.label :service_type %><br>
          <%= f.select :service_type, options_for_select(["Veterinário", "Adestrador", "Pet Shop", "Babá", "Passeador"]) %>
        </p>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <%= f.text_area :about, class: 'mdl-textfield__input' %>
          <%= f.label :about, class: 'mdl-textfield__label' %>
        </div>

        <p>
          <%= f.submit %>
        </p>
    <% end %>
</div>